<div class="rounded rounded-t-lg overflow-hidden shadow max-w-xs my-3 relative">
  <img src="https://i.imgur.com/dYcYQ7E.png" class="w-full" />
  <div class="flex justify-center -mt-8">
    <img src="https://as01.epimg.net/meristation/imagenes/2020/03/21/reportajes/1584789522_545134_1584789590_noticia_normal.jpg" class="rounded-full border-solid border-white border-2 -mt-3">
  </div>
  <div class="absolute right-0 top-0">
  <div class="relative" data-controller="room-dropdown">
    <button class="block h-12 w-12 rounded-full overflow-hidden focus:outline-none text-white font-bold" data-action="room-dropdown#toggle">
      More
    </button>
    <!-- Dropdown Body -->
    <div class="absolute right-0 w-40 mt-2 py-2 bg-white border rounded shadow-xl dropdown-body" data-target="room-dropdown.options">
      <%= link_to 'Edit', edit_room_path(room), class: "transition-colors duration-200 block px-4 py-2 text-normal text-gray-900 rounded hover:bg-indigo-500 hover:text-white" %>
      <div class="py-2">
        <hr></hr>
      </div>
      <a href="#" class="transition-colors duration-200 block px-4 py-2 text-normal text-gray-900 rounded hover:bg-indigo-500 hover:text-white" data-action="room-list#delete">
        Delete
      </a>
    </div>
  </div>
  </div>
	<div class="text-center px-3 pb-6 pt-2">
		<h3 class="text-black text-sm bold font-sans"><%= room.name %></h3>
		<p class="mt-2 font-sans font-light text-grey-dark truncate"><%= room.description %></p>
	</div>
  <div class="flex justify-center pb-3 text-grey-dark">
    <div class="text-center mr-3 border-r pr-3">
      <h2>3</h2>
      <span>Viewers</span>
    </div>
    <div class="text-center">
      <h2>1</h2>
      <span>Subscriber</span>
    </div>
  </div>
</div>
