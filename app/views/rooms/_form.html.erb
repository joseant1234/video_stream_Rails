<%= form_with(model: room, local: true, class: "mt-6", html: { novalidate: true },  data: { controller: "form", target: "form.form", action: "form#submitForm" }) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</p>

      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :name, class: 'block mt-2 text-xs font-semibold text-gray-600 uppercase' %>
  <%= form.text_field :name, class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %>
  <span class="text-red-500 font-semibold text-xs none"></span>

  <%= form.label :description, class: 'block mt-2 text-xs font-semibold text-gray-600 uppercase' %>
  <%= form.text_area :description, class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %>
  <span class="text-red-500 font-semibold text-xs none"></span>

  <%= form.label :vonage_session_id, class: 'block mt-2 text-xs font-semibold text-gray-600 uppercase' %>
  <%= form.text_field :vonage_session_id, class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %>
  <span class="text-red-500 font-semibold text-xs none"></span>

  <div class="mt-3">
    <%= link_to 'Back', rooms_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    <%= button_tag 'submit', class: 'py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 ml-3' do %>
      Save
    <% end %>
  </div>
<% end %>
